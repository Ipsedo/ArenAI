<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundTransparent" /> <!-- couleur de fond -->
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" /> <!-- contour bleu -->

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <item
        android:drawable="@drawable/spinner_arrow"
        android:gravity="end|center_vertical" />
</layer-list>