<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_toolbar"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/menu_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rectangle"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:text="@string/choose_enemy_level_text"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/enemy_level_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/spinner"
                    android:dropDownWidth="120dp"
                    android:dropDownVerticalOffset="4dp"
                    android:gravity="center"
                    android:prompt="@color/colorPrimary"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rectangle"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chosen_enemy_number_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:text="@string/chosen_enemy_number_text"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/enemy_number_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="20dp"
                    android:max="16"
                    android:min="1"
                    android:progress="1"
                    android:tickMark="@drawable/seekbar_tick_dot" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/use_controller_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/menu_horizontal_margin"
                android:layout_marginBottom="@dimen/menu_horizontal_margin"
                android:gravity="center"
                android:text="@string/use_controller_text"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="play"
                android:text="@string/play_button_text"
                android:textColor="@color/colorButtonText" />
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/menu_horizontal_margin"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/stroke_width"
                android:background="@drawable/button"
                android:onClick="configureGamePad"
                android:text="@string/configure_game_pad_text"
                android:textColor="@color/colorButtonText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/stroke_width"
                android:background="@drawable/button"
                android:onClick="configureControls"
                android:text="@string/configure_controls_text"
                android:textColor="@color/colorButtonText" />
        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
